<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp">

    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/iv_contact_msg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="6dp"
        android:src="@null" />

    <TextView
        android:textColor="@color/colorPrimarytext"
        android:layout_toRightOf="@+id/iv_contact_msg"
        android:layout_toEndOf="@+id/iv_contact_msg"
        android:id="@+id/tv_nom_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="14sp"
        android:text="Nom "/>

    <TextView
        android:textColor="@color/colorPrimarytext"
        android:layout_below="@+id/tv_nom_msg"
        android:layout_alignLeft="@+id/tv_nom_msg"
        android:layout_alignStart="@+id/tv_nom_msg"
        android:id="@+id/tv_cont_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp"
        android:text="Msg "/>

    <View
        android:id="@+id/vw_divider"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tv_nom_msg"
        android:layout_alignStart="@+id/iv_contact_msg"
        android:layout_below="@+id/tv_cont_msg"
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

    <TextView
        android:textColor="@color/colorPrimarytext"
        android:id="@+id/tv_date_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp"
        android:text="date"
        android:layout_above="@+id/tv_cont_msg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
