<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_contact"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:textColor="@color/colorPrimarytext"
        android:layout_toRightOf="@+id/img_contact"
        android:layout_toEndOf="@+id/img_contact"
        android:id="@+id/tv_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="16sp"
        android:text="Nom "/>

    <TextView
        android:textColor="@color/colorPrimarytext"
        android:layout_below="@+id/tv_nom"
        android:layout_alignLeft="@+id/tv_nom"
        android:layout_alignStart="@+id/tv_nom"
        android:id="@+id/tv_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp"
        android:text="tel "/>

    <View
        android:id="@+id/vw_divider"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tv_nom"
        android:layout_alignStart="@+id/img_contact"
        android:layout_below="@+id/tv_tel"
        android:background="@color/colorDivider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

</RelativeLayout>
